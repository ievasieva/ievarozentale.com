skewSETS  <- function(x){
  y <- as.numeric(x > 0.5)
  prop.table(table(y))
}

skewTAB <- as.data.frame(apply(fsq2, 2, skewSETS))
skewTAB <- skewTAB[!grepl(".y", names(skewTAB))]
skewTAB <- t(skewTAB) %>% as.data.frame()
skewTAB <- skewTAB[2:13,]
colnames(skewTAB) <- c("Perc. 0", "Perc.1")
